<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start"
    tools:context="kidzania.vehiclespuzzlegame.Fire">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp"
        android:shadowColor="#FFFF0000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:textColor="#ffcc0000"
        android:textSize="250sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/hospital_mobil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hospital_tanpa_ban"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/hospital_depan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hospital_ban_kosong"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="270dp"/>

    <ImageView
        android:id="@+id/hospital_belakang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hospital_ban_kosong"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="580dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient"
        android:id="@+id/layBanHospital"
        android:weightSum="1">


        <ImageView
            android:id="@+id/ban_sepeda"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerInParent="true"
            android:src="@drawable/sepeda_ban" />

        <ImageView
            android:id="@+id/ban_fire"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ban_sepeda"
            android:layout_marginLeft="50dp"
            android:src="@drawable/fire_ban" />

        <ImageView
            android:id="@+id/ban_bus"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ban_fire"
            android:layout_marginLeft="50dp"
            android:src="@drawable/bus_ban" />

        <ImageView
            android:id="@+id/ban_hospital"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ban_sepeda"
            android:layout_marginRight="50dp"
            android:src="@drawable/hospital_ban" />

        <ImageView
            android:id="@+id/ban_traktor"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ban_hospital"
            android:layout_marginRight="50dp"
            android:src="@drawable/tracktor_ban" />

    </RelativeLayout>

</RelativeLayout>
